{
  "name": "creation-ai",
  "version": "1.0.0",
  "description": "AI-Powered Development Platform",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "dependencies": {
    "@creation-ai/core": "workspace:*",
    "@creation-ai/ui": "workspace:*",
    "@creation-ai/ai": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/react": "^18.0.0",
    "turbo": "^1.10.0",
    "typescript": "^5.0.0",
    "prettier": "^2.8.8"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "pnpm@8.6.0"
}